create user C##admin_emp identified by admin123;


-- create employees table
-- employee_id can accept numeric values of six digits can't left blank
-- name char(50) can't left blank
-- dateofjoining
-- sex char(1) can accept only 'M' or 'F'
-- salary number(8,2) default 10000.00
-- employee department varchar2(30) belong to executive, accountant & manager

create table employees(
    employee_id number(6) primary key,
    name char(50) not null,
    dateofjoining date,
    sex char(1) check (sex in ('M','F')),
    salary number(8,2) default 10000.00,
    employee_department varchar2(30) check (employee_department in ('executive','accountant','manager'))
);

-- insert data into employees table




insert into employees values(101,'John Doe',to_date('2020-01-15','YYYY-MM-DD'),'M',12000.00,'executive');
insert into employees values(102,'Jane Smith',to_date('2019-03-22','YYYY-MM-DD'),'F',15000.00,'manager');
insert into employees values(103,'Alice Johnson',to_date('2021-07-30','YYYY-MM-DD'),'F',11000.00,'accountant');

select * from employees;

-- foreign key example
create table departments(
    department_id number(4) primary key,
    department_name varchar2(30) not null
);

insert into departments values(1,'executive');
insert into departments values(2,'accountant');

-- adding foreign key to employees table

alter table employees
add constraint fk_department
foreign key (employee_department)
references departments(department_name);



delete from employees where employee_id=103;

update employees set salary=13000.00 where employee_id=101;